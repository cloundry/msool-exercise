{
  "compilerOptions": {
    "target": "ESNext",
    "composite": true,
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "vite-plugin-svgr/client",
      "vite-plugin-html",
      "vitest/globals",
      "vitest/importMeta"
    ],
    "baseUrl": "./",
    "paths": {
      "@services": [
        "./src/services"
      ],
      "@interfaces": [
        "./src/interfaces"
      ],
      "@context/*": [
        "./src/context/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@pages": [
        "./src/pages"
      ],
      "@components": [
        "./src/components"
      ],
      "@context": [
        "./src/context"
      ],
      "@routes": [
        "./src/routes"
      ],
      "@utils": [
        "./src/utils"
      ],
      "@config": [
        "./src/config"
      ],
      "@test-helpers/*": [
        "./tests/utils/helpers/*"
      ],
      "@test-page-objects/*": [
        "./tests/utils/page-objects/*"
      ],
      "@test-types/*": [
        "./tests/utils/types/*"
      ]
    }
  },
  "include": [
    "./src",
    "./tests",
    "src/**/*.json"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
